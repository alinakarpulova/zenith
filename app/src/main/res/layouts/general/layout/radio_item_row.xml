<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/dialog_radio_button"
        android:minWidth="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_width="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Heading"
            android:fontFamily="@font/inter_medium"
            android:text="Name Sample"/>

        <TextView
            android:id="@+id/dialog_item_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Label"
            android:fontFamily="@font/inter_light"
            android:text="Category Sample"/>
    </LinearLayout>

</LinearLayout>