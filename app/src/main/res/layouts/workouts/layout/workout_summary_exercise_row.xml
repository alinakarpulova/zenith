<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/workout_summary_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Heading" />

    <TableLayout
        android:layout_marginTop="4dp"
        android:id="@+id/workout_summary_exercise_set_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_set"
                android:textAppearance="@style/TextAppearance.AppCompat.Label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_lbs"
                android:textAppearance="@style/TextAppearance.AppCompat.Label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_reps"
                android:textAppearance="@style/TextAppearance.AppCompat.Label" />
        </TableRow>
    </TableLayout>
</LinearLayout>