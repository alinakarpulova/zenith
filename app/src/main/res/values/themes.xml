<resources>

    <style name="Base.Theme.Zenith" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="headingFontFamily">@font/inter_medium</item>
        <item name="bodyFontFamily">@font/inter</item>
        <item name="labelFontFamily">@font/inter_light</item>

        <item name="android:statusBarColor">@color/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- themes.xml -->
    <style name="CustomBottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorOnPrimary</item>
    </style>

    <color name="iconTint">#222222</color>

    <color name="colorPrimary">#10b981</color>
    <color name="colorError">#dc2626</color>
    <color name="colorOnPrimary">#a7f3d0</color>
    <color name="rippleColor">#55a7f3d0</color>
    <color name="surfaceColor">#22a7f3d0</color>
    <color name="backgroundColor">#f5fffb</color>
    <color name="surfaceHigh">#d4fcee</color>
    <color name="pillBackground">@color/cardview_shadow_end_color</color>
    <color name="shapeBackground">@color/cardview_light_background</color>
    <color name="textInputBackground">?attr/colorSurfaceContainer</color>


    <style name="Theme.Zenith" parent="Base.Theme.Zenith" />
</resources>