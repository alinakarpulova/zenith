<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workout_exercise_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/label_set"
            android:textAppearance="@style/TextAppearance.AppCompat.Label" />

        <TextView
            android:text="@string/label_previous"
            android:textAppearance="@style/TextAppearance.AppCompat.Label" />

        <TextView
            android:text="@string/label_lbs"
            android:textAppearance="@style/TextAppearance.AppCompat.Label" />

        <TextView
            android:text="@string/label_reps"
            android:textAppearance="@style/TextAppearance.AppCompat.Label" />

    </TableRow>
</TableLayout>